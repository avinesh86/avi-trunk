<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true"><shape>
            <padding android:bottom="2dp" android:left="5dp" android:right="5dp" android:top="2dp" />
            <gradient android:angle="270" android:endColor="#00ff00ba" android:startColor="#00ff00c4" />
            <corners android:bottomLeftRadius="10dp" android:bottomRightRadius="10dp" android:topLeftRadius="10dp" android:topRightRadius="10dp" />
            <stroke android:width="1dp" android:color="#222222" />
        </shape></item>
    <item><shape>
            <padding android:bottom="2dp" android:left="5dp" android:right="5dp" android:top="2dp" />
            <corners android:bottomLeftRadius="10dp" android:bottomRightRadius="10dp" android:topLeftRadius="10dp" android:topRightRadius="10dp" />
            <solid android:color="#00ff00" />
            <stroke android:width="1dp" android:color="#222222" />
        </shape></item>
</selector>